<div class="form-group">
    <label for="title">Title:</label>
    <input required type="text" class="form-control" name="title" placeholder="Enter title" value="<%= article.title %>"
        autofocus>
</div>
<div class="form-group">
    <label for="description">Description: </label>
    <textarea name="description" class="form-control" cols="30" rows="6"
        placeholder="Enter description"><%= article.description %></textarea>
</div>

<div class="form-group">
    <label for="markdown">MarkDown: </label>
    <textarea name="markdown" class="form-control" cols="30" rows="6"
        placeholder="Enter Markdown"><%= article.markdown %></textarea>
</div>


